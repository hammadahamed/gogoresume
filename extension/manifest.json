{
  "manifest_version": 3,
  "name": "GoGoResume",
  "version": "1.0.2",
  "description": "AI-powered resume tweaker for Job hunters",
  "permissions": ["storage", "sidePanel", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["mascot.webp"],
      "matches": ["<all_urls>"]
    }
  ]
}
